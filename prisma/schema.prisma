// This is your Prisma schema file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cafe {
  id               Int      @id @default(autoincrement())
  name            String   @unique
  location        String
  recyclingRate   Float
  cupsRecycled    Int
  trend           Int
  website         String
  wasteReduction  Float
  compostProduced Float
  contaminationRate Float
  rank            Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model HistoricalData {
  id              Int      @id @default(autoincrement())
  totalCafes      Int
  cafesChange     Int
  totalCups       Int
  cupsChange      Int
  averageRate     Float
  rateChange      Float
  topPerformer    String
  topPerformerRate Float
  date            DateTime @default(now())
}

model Insights {
  id             Int      @id @default(autoincrement())
  cupsRecycled   Int
  co2Saved       Float
  wasteDiverted  Float
  date           DateTime @default(now())
} 